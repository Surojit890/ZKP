# Environment Variables Configuration

# MongoDB Connection String
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# API Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:5000/api

# Crypto Configuration
# Hash function for password derivation
HASH_ALGORITHM=sha256

# Argon2 parameters for PBKDF2
ARGON2_OPSLIMIT=moderate
ARGON2_MEMLIMIT=moderate

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_SECURE=false  # Set to true in production with HTTPS

# Logging
LOG_LEVEL=INFO
